<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MagazineOfCultAuto" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <!-- Кастомный стиль для кнопок -->
    <!-- Кастомный стиль для кнопок с градиентом -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Базовые параметры -->
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">60dp</item>

        <!-- Текст -->
        <item name="android:textColor">#FFFFFF</item> <!-- Белый текст для контраста -->
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>

        <!-- Отступы -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <!-- Градиентный фон -->
        <item name="android:background">@drawable/gradient_background</item>
        <item name="backgroundTint">@null</item> <!-- Отключаем tint, чтобы работал наш градиент -->

        <!-- Границы -->
        <item name="strokeColor">#FFFFFF</item> <!-- Белая обводка -->
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item> <!-- Скругленные углы -->
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="itemIconSize">28dp</item> <!-- Увеличенный размер иконок -->
        <item name="android:textSize">14sp</item> <!-- Увеличенный размер текста -->
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Применяем стиль ко всем кнопкам -->





    <style name="Theme.MagazineOfCultAuto" parent="Base.Theme.MagazineOfCultAuto" />
</resources>