<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">


        <!-- Базовые параметры -->
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">60dp</item>

        <!-- Цвета -->
        <item name="backgroundTint">#F5F5DC</item>
        <item name="android:textColor">#000000</item>

        <!-- Текст -->
        <item name="android:textSize">18sp</item> <!-- Фиксированный размер -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>


        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>

        <!-- Границы -->
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">0dp</item>

    </style>
</resources>